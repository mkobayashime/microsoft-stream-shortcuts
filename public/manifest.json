{
  "manifest_version": 2,
  "name": "Microsoft Stream Shortcuts",
  "version": "1.1",
  "description": "Add some Youtube-like shortcuts to Microsoft Stream",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "64": "icons/icon_64.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.microsoftstream.com/video/*"
      ],
      "js": [
        "msStream.js"
      ]
    },
    {
      "matches": [
        "https://www.amazon.co.jp/gp/video/*"
      ],
      "js": [
        "primeVideo.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs"
  ]
}