    "prettier": "^2.0.5",
    "sass-loader": "^8.0.2",
    "size-plugin": "^2.0.1",
    "style-loader": "^1.2.1",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2"
